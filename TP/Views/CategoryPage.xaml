<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TP.ViewModels"
             xmlns:models="clr-namespace:TP.Models"
             x:Class="TP.Views.CategoryPage"
             x:DataType="viewmodels:CategoryViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FAFAFA">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="#1A5D4A"
              Padding="20,60,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Text="←"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Command="{Binding BackCommand}"
                    WidthRequest="40"
                    HeightRequest="40"
                    Padding="0" />
            
            <Label Grid.Column="1"
                   Text="{Binding Category.Name}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   Margin="10,0,0,0" />
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="#FAFAFA">
            <CollectionView ItemsSource="{Binding Procedures}"
                          SelectionMode="None"
                          Margin="0,10,0,0"
                          BackgroundColor="#FAFAFA">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Procedure">
                        <Border BackgroundColor="White"
                                StrokeThickness="0"
                                Padding="20,15"
                                Margin="0,0,0,0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoryViewModel}}, Path=NavigateToProcedureCommand}"
                                                     CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Icon Circle -->
                                <Border Grid.Column="0"
                                        WidthRequest="50"
                                        HeightRequest="50"
                                        BackgroundColor="#F5F5F5"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 25"
                                        VerticalOptions="Center"
                                        Margin="0,0,15,0">
                                    <Label Text="{Binding Icon}"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Border>
                                
                                <!-- Text -->
                                <Label Grid.Column="1"
                                       Text="{Binding Title}"
                                       FontSize="16"
                                       TextColor="Black"
                                       VerticalOptions="Center" />
                                
                                <!-- Arrow -->
                                <Label Grid.Column="2"
                                       Text="›"
                                       FontSize="24"
                                       TextColor="#666666"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>

